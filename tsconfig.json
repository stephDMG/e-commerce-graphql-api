{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@graphql/*": ["graphql/*"],
      "@/*": ["*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "src/@types/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}